@using System.Globalization
@using Ucommerce.Web.Infrastructure.Extensions
@model CustomUITest.Models.CategoryViewModel
@{
    Layout = "Layout.cshtml";
}

<h1>Products</h1>

<ul>
    @{
        foreach (var product in Model.Products)
        {
            <li>
                <a href=@($"/product/{Html.Raw(product.Sku)}")>@Html.Raw(product.DisplayName)</a>
                <p> @Html.Raw(product.Price.PriceInclTax.FormatToCurrency(CultureInfo.CurrentCulture)) </p>
            </li>
        }
    }
</ul>